@{
    ViewBag.Title = "Header_footer";
}

<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <title>RJTAB</title>
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap-theme.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Custom_Scripts/index_style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Custom_Scripts/pets_style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Custom_Scripts/login_style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Custom_Scripts/details_style.css")" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-2.1.3,min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Custom_Scripts/login_signup.js"></script>
    <script src="~/Custom_Scripts/Changings.js"></script>
    
</head>
<body id="layout">

    <header class="page-header" id="header-page">
        <div class="row" id="headre-row" style="margin-bottom:20px">
            <div class="col-md-3 col-md-offset-2">

                <form role="form" class="block-search">

                    <div class="input-group">

                        <input type="text" id="search" class="form-control" placeholder="Search.." />
                        <span class="input-group-btn">
                            <button id="search-btn" class="btn btn-primary-very-light search-button" type="button"><span class="icon glyphicon glyphicon-search"></span></button>
                        </span>

                    </div>
                </form>
            </div>

            @if (Session["aname"] == null)
            {
                <div class="col-md-2">
                    <div class="btn-group">
                        <a class="btn" id="login" href="#" onclick="location.href='@Url.Content("~/Admin/Login")'">LOGIN <span class="icon glyphicon glyphicon-log-in"></span></a>
                       
                    </div>
                </div>
            }
            else
            {
                <div class="col-md-2">
                    <ul style="margin-top:45px">
                        <li class="dropdown">
                            <a id="list-item-21" href="#" data-toggle="dropdown" class="dropdown-toggle" style=" font-size:30px; font-style:initial; margin-top: 30px; color: darkolivegreen;"> @Session["aname"] </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <ul class="menu-items">
                                                <li><a class="btn" id="logout" href="#" onclick="location.href='@Url.Content("~/Admin/logout")'" style=" margin-top:50px; background-color:darkolivegreen; color:white;">LOGOUT <span class="icon glyphicon glyphicon-log-out"></span></a></li>
                                            </ul>
                                        </div>

                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>


            }
        </div>

    </header>

    <nav class="collapse navbar-collapse" id="navbar-tab" role="navigation">

        <div>
            <ul class="nav navbar-nav" id="navbar-tab-list">
                <li class="item active"> <a href="#" id="list-item-1" onclick="location.href='@Url.Content("~/Admin/Index")'"> <span class="icon glyphicon glyphicon-home"></span> AdminHome </a></li>
                <li >
                    <a id="list-item-2" href="#">Add </a>
                </li>
                <li>
                    <a id="list-item-3" href="#">Update </a>
                </li>

                <li>
                    <a id="list-item-4" href="#">Delete </a>
                </li>

                <li>
                    <a id="list-item-5" href="#">Get </a>
                </li>


                

            </ul>
        </div>

    </nav>

        
    @RenderBody()
    <br /><br /><br />
    <br /><br /><br />
    <div id="footer" style="margin-top:50px">
    
     </div>
    <script src="~/Scripts/jquery-2.1.3.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Custom_Scripts/login_signup.js"></script>
    <script src="~/Custom_Scripts/Changings.js"></script>
</body>
</html>



